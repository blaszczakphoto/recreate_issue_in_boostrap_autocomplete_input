<%= simple_form_for(order) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.input :client, as: :autocomplete, source_query: autocomplete_client_name_clients_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
